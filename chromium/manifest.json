{
  "manifest_version": 3,
  "name": "Marreta",
  "version": "0.3",
  "description": "Chapéu de paywall é marreta!",
  "homepage_url": "https://marreta.pcdomanual.com/",
  "author": "Manual do Usuário/Renan Altendorf/Clarissa Mendes",
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Abrir essa página com Marreta",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
